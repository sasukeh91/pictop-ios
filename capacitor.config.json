{
  "appId": "ro.pictop.app",
  "appName": "PicTop",
  "webDir": "www",
  "server": {
    "url": "https://pictop.ro",
    "cleartext": false
  },
  "ios": {
    "contentInset": "automatic",
    "backgroundColor": "#0d47a1",
    "preferredContentMode": "mobile",
    "limitsNavigationsToAppBoundDomains": true
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#0d47a1",
      "showSpinner": false,
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "StatusBar": {
      "style": "Light",
      "backgroundColor": "#0d47a1"
    }
  }
}
